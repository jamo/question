- model_class = CheckboxGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @checkbox_group.title
%p
  %strong= model_class.human_attribute_name(:base_question_id) + ':'
  %br
  = @checkbox_group.base_question_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), checkbox_groups_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_checkbox_group_path(@checkbox_group), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), checkbox_group_path(@checkbox_group), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
