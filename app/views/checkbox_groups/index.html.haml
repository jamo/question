- model_class = CheckboxGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:base_question_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @checkbox_groups.each do |checkbox_group|
      %tr
        %td= link_to checkbox_group.id, checkbox_group_path(checkbox_group)
        %td= checkbox_group.title
        %td= checkbox_group.base_question_id
        %td=l checkbox_group.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_checkbox_group_path(checkbox_group), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), checkbox_group_path(checkbox_group), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_checkbox_group_path, :class => 'btn btn-primary'
