= form_for @radio_button_option, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :radio_button_group_id, :class => 'control-label'
    .controls
      = f.number_field :radio_button_group_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), radio_button_options_path, :class => 'btn'
