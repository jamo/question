- model_class = RadioButtonOption
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @radio_button_option.title
%p
  %strong= model_class.human_attribute_name(:radio_button_group_id) + ':'
  %br
  = @radio_button_option.radio_button_group_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), radio_button_options_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_radio_button_option_path(@radio_button_option), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), radio_button_option_path(@radio_button_option), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
