- model_class = BaseQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @base_questions.each do |base_question|
      %tr
        %td= link_to base_question.id, base_question_path(base_question)
        %td= base_question.title
        %td=l base_question.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_base_question_path(base_question), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), base_question_path(base_question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_base_question_path, :class => 'btn btn-primary', method: :new
