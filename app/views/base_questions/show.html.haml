- model_class = BaseQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @base_question.title

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), base_questions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_base_question_path(@base_question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), base_question_path(@base_question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
