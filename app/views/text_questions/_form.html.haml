= form_for [@base_question, @text_question]  do |f|
  - if @text_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@text_question.errors.count, "error")} prohibited this text_question from being saved:"
      %ul
        - @text_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
